<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preferences"
    android:background="#F8DADF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/questions_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="cursive"
        android:text="Search Preferences"
        android:textAlignment="center"
        android:textColor="#C31953"
        android:padding="7dp"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Looking for"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/lookingFor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="10sp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="0sp"
        android:layout_gravity="right">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open to Everyone"
            android:switchPadding="100sp"
            android:minHeight="48dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10sp">

            <CheckBox
                android:id="@+id/men_checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Men"
                android:layout_marginTop="5sp"
                android:minHeight="48dp"/>
            <CheckBox
                android:id="@+id/women_checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Women"
                android:layout_marginTop="5sp"
                android:minHeight="48dp"/>
            <CheckBox
                android:id="@+id/nonBinary_checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-binary"
                android:layout_marginTop="5sp"
                android:minHeight="48dp"/>
        </LinearLayout>


    </LinearLayout>




</LinearLayout>